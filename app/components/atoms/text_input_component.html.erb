<label class="relative flex items-center <%= @additionalCss %>">
    <%= search_icon_component additionalCss: "absolute left-5" if @type == "search" %>
    <input
        type="text" 
        placeholder="<%= input_placeholder %>" 
        class="py-3 w-full rounded-3xl border border-indigo-600 placeholder:text-gray-400 placeholder:text-lg <%= @type == "search" ? "pl-12 pr-4" : "px-5 bg-gray-100" %>"
    >
    <% if @type == "email" %>
        <div class="text-indigo-600 absolute right-5">
            <%= arrow_down_component %>
        </div>
    <%end%>
</label>