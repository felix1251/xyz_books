            </div>
        </div>
        <h1 class="text-center text-white font-bold text-[2.5rem] mb-10">Trusted By Awesome <span class="text-orange-300">Clients</span></h1>
        <div class="flex flex-wrap justify-center gap-20 scale-110">
            <%= client_logo_component text: "Binance", logo: binance_logo_component %>
            <%= client_logo_component text: "Bitcoin", logo: bitcoin_logo_component %>
            <%= client_logo_component text: "Solana", logo: solona_logo_component %>
            <%= client_logo_component text: "Ethereum", logo: ethereum_logo_component %>
